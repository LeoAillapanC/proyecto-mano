-if user_signed_in?
	
	.col-md-10.center-block.no-float
		%article.card.large-padding
			.col-md-12.bold
				Carrito de compras Numero :
				=@shopping_cart.id
				%p
				%p
				Su mail : 
				= current_user.email
			%br
			%br
			%section.big-top-space.text-center
				%h2 Resumen de tu pedido
				%table.table.table-striped.table-hover.medium#table_shopping_cart
					%thead
						%td Producto
						%td Costo
					%tbody
						-@shopping_cart.in_shopping_carts.each do |i_sh|
							-product =i_sh.product
							%tr{id: "#{product.id}"}
								%th= product.name
								%th= product.pricing
			-if user_signed_in?
				%p.green-text.medium 
					Envienos un correo con sus requerimientos y la forma de entrega a
				.green-text.medium.bold
					local.cbc@gmail.com
				.green-text.medium
					nosotros te responderemos a la brevedad.
					
				%h3.blue-text.big 
					Informacion de contacto:
				%p.bold Telefono:  22 563 7585
				%p.bold Direccion: Cardenal Caro #4331, PAC
				%p.bold Email:     local.cbc@gmail.com
-else
	%h3.demencial
		Error kappa 8
	.pull-left
		=image_tag "ranapepe.jpg", width:"420"