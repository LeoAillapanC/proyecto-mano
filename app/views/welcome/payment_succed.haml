-if user_signed_in?
	
	.col-md-10.center-block.no-float
		%article.card.large-padding
			.col-md-12
				Carrito de compras Numero :
				=@shopping_cart.id
				%h1 Como comprar
				
				.col-md-12
					=link_to carrito_path,class:"btn btn-success" do
						Paso 2
					Ve el costo total de tu pedido en el carro de compras
				.col-md-12.bigger.green-text
					
					Paso 3 -->
					Contactamos
			%section.big-top-space.text-center
				%h2 Resumen de tu pedido
				%table.table.table-striped.table-hover.medium#table_shopping_cart
					%thead
						%td Producto
						%td Costo
					%tbody
						-@shopping_cart.in_shopping_carts.each do |i_sh|
							-product =i_sh.product
							%tr{id: "#{product.id}"}
								%th= product.name
								%th= product.pricing
			-if user_signed_in?
				%p.green-text.medium 
					Le hemos enviado un correo a :
					= current_user.email
				%h3.blue-text.big 
					Informacion de contacto:
				%p Telefono:  22 563 7585
				%p Direccion: Cardenal Caro #4331, PAC
				%p Email:     brendacuellara@hotmail.com
				%p Cuenta corriente: xxxxx-xxxxx-xxxx Scotiabank
-else
	%h3.demencial
		Error kappa 8
	.pull-left
		=image_tag "ranapepe.jpg", width:"420"