.col-lg-9.5.col-md-8.col-xs-12.col-sm-10.col-sm-11.no-float.center-block
  %article.card.big-padding
    %header
      %h1.grey-text.big= @product.name
    %section
      .col-xs-6.col-md-5.no-padding
        =image_tag @product.avatar.url
      %section
        .col-md-1.inline-block.hidden-xs
        .col-xs-5.col-md-6.text-left
          %h3.blue-text.bold.normal= @product.user.email
          %h3.green-text.bold.normal
            Precio:
            %span.grey-text.inline-block="$#{@product.pricing}"
          %h3.green-text.bold.normal
            Stock:
            %span.grey-text.inline-block=@product.stock
          %h3.green-text.bold.normal
            Categoria:
            %span.grey-text.inline-block=@product.categoria


    %section
    .col-xs-5.col-md-6.text-left
      %h3.green-text.bold.normal.inline-block Descripcion del Producto
      %p= @product.description

      =render "in_shopping_carts/form", product: @product, :data => { :confirm => 'Estas Seguro?' }
      -if current_user.try(:admin? )
        = link_to edit_product_path(@product), class:"btn btn-info" do
          Editar Producto