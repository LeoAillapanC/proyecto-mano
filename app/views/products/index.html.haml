%h1 Lista de productos

%table
  %thead
    %tr
      %th Nombre
      %th Precio
      %th Descripcion
      %th Stock
      %th Usuario
      %th
      %th
      %th

  %tbody
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.pricing
        %td= product.description
        %td= product.stock
        %td= product.user
        %td= link_to 'Mostrar', product
        %td= link_to 'Editar', edit_product_path(product)
        %td= link_to 'Eliminar', product, :method => :delete, :data => { :confirm => 'Estas Seguro?' }

%br

= link_to 'Nuevo Producto', new_product_path
